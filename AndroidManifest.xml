<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:name="com.normalexception.forum.MainApplication"
    package="com.normalexception.forum.rx8club"
    android:installLocation="auto"
    android:versionCode="1066"
    android:versionName="1.0.66" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:name="MainApplication"
        android:allowClearUserData="true"
        android:description="@string/app_description"
        android:icon="@drawable/rotor_icon"
        android:label="@string/app_name"
        android:testOnly="false"
        android:theme="@style/AppTheme"
        android:vmSafeMode="false" >
        <activity
            android:name=".activities.LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:icon="@drawable/rotor_icon"
            android:label="@string/title_activity_main"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_main"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name=".activities.list.CategoryActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_category" >
        </activity>
        <activity
            android:name=".activities.thread.ThreadActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_thread" >
        </activity>
        <activity
            android:name=".activities.list.NewPostsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_new_posts" >
        </activity>
        <activity
            android:name=".activities.ProfileActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_profile"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name=".activities.SearchActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_about"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name=".preferences.Preferences"
            android:label="@string/preferencesLabel"
            android:theme="@android:style/Theme.Black" >
        </activity>
        <activity
            android:name=".activities.thread.NewThreadActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_new_thread" >
        </activity>
        <activity
            android:name=".activities.thread.EditPostActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_edit_post" >
        </activity>
        <activity
            android:name=".activities.fragments.BannerFragment"
            android:label="@string/title_activity_banner_fragment" >
        </activity>
        <activity
            android:name=".activities.pm.PrivateMessageActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_private_message" >
        </activity>
        <activity
            android:name=".activities.pm.PrivateMessageViewActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_private_message_view" >
        </activity>
        <activity
            android:name=".activities.pm.NewPrivateMessageActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_new_private_message" >
        </activity>
        <activity
            android:name=".activities.UserCpActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_user_cp" >
        </activity>
        <activity
            android:name=".activities.fragments.StylerFragment"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_styler_fragment" >
        </activity>
    </application>

</manifest>