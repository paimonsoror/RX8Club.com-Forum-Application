<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:name="com.normalexception.forum.MainApplication"
    package="com.normalexception.forum.rx8club"
    android:installLocation="auto"
    android:versionCode="1045"
    android:versionName="1.0.45" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:name="MainApplication"
        android:allowClearUserData="true"
        android:description="@string/app_description"
        android:icon="@drawable/rotor_icon"
        android:label="@string/app_name"
        android:testOnly="false"
        android:theme="@style/AppTheme"
        android:vmSafeMode="false" >
        <activity
            android:name=".activities.LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:icon="@drawable/rotor_icon"
            android:label="@string/title_activity_main"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_main"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name=".activities.CategoryActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_category" >
        </activity>
        <activity
            android:name=".activities.ThreadActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_thread" >
        </activity>
        <activity
            android:name=".activities.NewPostsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_new_posts" >
        </activity>
        <activity
            android:name=".activities.ProfileActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_profile"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name=".activities.SearchActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_about"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name=".preferences.Preferences"
            android:label="@string/preferencesLabel"
            android:theme="@android:style/Theme.Black" >
        </activity>
        <activity
            android:name=".activities.NewThreadActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_new_thread" >
        </activity>
        <activity
            android:name=".activities.EditPostActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_edit_post" >
        </activity>
    </application>

</manifest>