<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!-- ListRow Left sied Thumbnail image -->

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="1dip" >

        <ImageView
            android:id="@+id/cv_image"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:src="@drawable/arrow_icon" />
    </LinearLayout>

    <!-- Title Of Thread -->

    <TextView
        android:id="@+id/cv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Here is a cool category name"
        android:textColor="#040404"
        android:textSize="14dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_title"
        android:orientation="horizontal"
        android:padding="1dip" >

        <TextView
            android:id="@+id/cv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:text="My Description that is really long to make sure it doesn&apos;t overlap because sometimes when you have a long desc it does"
            android:textColor="#040404"
            android:textSize="10dip"
            android:typeface="sans" />

        <!-- Rightend Post Counts -->		
        <TextView
            android:id="@+id/cv_postCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:layout_below="@+id/cv_desc"
            android:layout_marginTop="2dp"
            android:text="5:45"
            android:textColor="#ffffff"
            android:textSize="10dip"
            android:textStyle="bold" />
		<TextView
            android:id="@+id/cv_postCount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/cv_postCount"
            android:layout_below="@+id/cv_desc"
            android:layout_marginTop="2dp"
            android:text="Pst: "
            android:textColor="#000000"
            android:textSize="10dip"
            android:textStyle="bold" />
		
		
        <TextView
            android:id="@+id/cv_threadCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_desc"
            android:layout_toLeftOf="@+id/cv_postCount_label"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dip"
            android:text="5:45"
            android:textColor="#ffffff"
            android:textSize="10dip"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/cv_threadCount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/cv_threadCount"
            android:layout_below="@+id/cv_desc"
            android:layout_marginTop="2dp"
            android:text="Thr: "
            android:textColor="#000000"
            android:textSize="10dip"
            android:textStyle="bold" />
	
        
  		<TextView
            android:id="@+id/cv_subCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/cv_threadCount_label"
            android:layout_below="@+id/cv_desc"
            android:layout_marginTop="2dip"
            android:layout_marginRight="5dip"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="10dip"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/cv_subCount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/cv_subCount"
            android:layout_below="@+id/cv_desc"
            android:layout_marginTop="2dp"
            android:text="Sub: "
            android:textColor="#000000"
            android:textSize="10dip"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>