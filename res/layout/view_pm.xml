<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >
 
    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">
 
        <ImageView
            android:id="@+id/pm_image"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:src="@drawable/black_mail"/>
 
    </LinearLayout>
 
    <!-- Title Of Thread-->
    <TextView
        android:id="@+id/pm_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Here is a cool category name"
        android:textColor="#ffffff"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />
     
     <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="1dip"
	    android:layout_below="@id/pm_subject"
	    android:layout_alignParentRight="true"
	    android:gravity="right" >
        
        	<TextView
		        android:id="@+id/pm_fromlabel"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="From: "
		        android:textColor="#ffffff"
		        android:textSize="8dip"
		        android:typeface="sans"
		        android:paddingRight="5dip"/>
           
		    <TextView
		        android:id="@+id/pm_from"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="paimon.soror"
		        android:textColor="#ffffff"
		        android:textSize="8dip"
		        android:typeface="sans"
		        android:paddingRight="20dip"/>
	    
		    <TextView
		        android:id="@+id/pm_datelabel"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Date: "
		        android:textSize="8dip"
		        android:textColor="#ffffff"
		        android:textStyle="bold"
		        android:paddingRight="5dip"/>
		    
		    <TextView
		        android:id="@+id/pm_date"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="07-26-2013"
		        android:textSize="8dip"
		        android:textColor="#ffffff"
		        android:textStyle="bold"/>
    </LinearLayout>
 
</RelativeLayout>