<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/darker_gray"
    android:orientation="horizontal"
    android:padding="5dp">
		    
	<TextView
	    android:id="@+id/postSubjectTitle"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/ntThreadName" />
	
	<EditText
	    android:id="@+id/postSubject"
	    android:layout_below="@id/postSubjectTitle"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:inputType="text" >
	
	    <requestFocus />
	</EditText>
	
	<TextView
	    android:id="@+id/postPostTitle"
	    android:layout_below="@id/postSubject"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingTop="20dip"
	    android:text="@string/ntThreadPost" />
	
	<EditText
	    android:id="@+id/postPost"
	    android:layout_below="@id/postPostTitle"
	    android:inputType="textMultiLine" 
	    android:minLines="10" 
	    android:gravity="top|left"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent" 
	    android:scrollbars="vertical" />
	
	<Button
	    android:id="@+id/newThreadButton"
	    android:layout_below="@id/postPost"
	    style="?android:attr/buttonStyleSmall"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/submit" />
</RelativeLayout>